@using ProyectoWeb.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/PluginsCSS")
    @RenderSection("estilos", required: false)
    <style>
        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            top: 56px; /* Altura de la barra superior */
            left: 0;
            background-color: #c6ae31; /* Amarillo */
            padding-top: 20px;
        }

            .sidebar a {
                padding: 10px 15px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #575757;
                }

        .content {
            margin-left: 260px; /* Same as the width of the sidebar */
            padding: 20px;
        }

        .footer-image {
            display: block;
            margin: auto; /* Centrar horizontal y verticalmente */
        }

        footer {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-expand-sm bg-dark navbar-dark">
        @Html.ActionLink("AEROLINEA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        <!-- Links -->
        <ul class="nav navbar-nav">
            @Html.ActionLinkAllow()
        </ul>

        <!-- Right-aligned menu items -->
        <ul class="nav navbar-nav ml-auto">
            <li class="nav-item">
                <a href="@Url.Action("Salir", "Home")" class="nav-link">
                    <i class="fas fa-arrow-alt-circle-right"></i>
                    <span><strong>Salir</strong></span>
                </a>
            </li>
        </ul>
    </div>

    <div class="sidebar">

        <a href="@Url.Action("Index", "Avion")">Avion</a>
        <a href="@Url.Action("Index", "RutaAvion")">Ruta Avion</a>
        <a href="@Url.Action("Index", "Vuelo")">Vuelo</a>
        <a href="@Url.Action("Index", "Reserva")">Reserva</a>
        <a href="@Url.Action("Index", "Factura")">Factura</a>
    </div>

    <div class="content">
        <div class="container-fluid mt-4">
            @RenderBody()
            <hr />
            <img class="img-fluid footer-image" id="img1" src="@Href("~/Resources/Images/aerolinea.jpg")" />
            <footer>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/PluginsJS")
    <script type="text/javascript">
        // Your JavaScript URLs setup
        $.extend({ MisUrls: { url: {}, urls: function (a) { $.extend($.MisUrls.url, a); } } });

        $.MisUrls.urls({ UrlGetRoles: '@Url.Action("Listar", "Rol")' });
        $.MisUrls.urls({ UrlGetRol: '@Url.Action("Obtener", "Rol")' });
        $.MisUrls.urls({ UrlPostRol: '@Url.Action("Guardar", "Rol")' });
        $.MisUrls.urls({ UrlDeleteRol: '@Url.Action("Eliminar", "Rol")' });

        //ROL PERMISOS
        $.MisUrls.urls({ UrlGetRolPermisos: '@Url.Action("Obtener", "RolPermiso")' });
        $.MisUrls.urls({ UrlPostGuardarCambios: '@Url.Action("Guardar", "RolPermiso")' });

        //USUARIO
        $.MisUrls.urls({ UrlGetUsuarios: '@Url.Action("Listar", "Usuario")' });
        $.MisUrls.urls({ UrlPostUsuario: '@Url.Action("Guardar", "Usuario")' });
        $.MisUrls.urls({ UrlGetUsuario: '@Url.Action("Obtener", "Usuario")' });
        $.MisUrls.urls({ UrlDeleteUsuario: '@Url.Action("Eliminar", "Usuario")' });

        // Your other URL setups
        // ...
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>